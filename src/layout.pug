doctype html
html
  head
    title Daniel Yost
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(src='./assets/main.js')
    link(rel='icon', type='image/x-icon', href='./assets/img/logo_23.svg')
  body.vh-100
      header 
        nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
          .container-fluid.justify-content-between
              a.navbar-brand(href='#')
                img.me-2(width='30px', height='30px', src='./assets/img/logo_23.svg')
                span.align-middle Daniel Yost
              button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon.fs-1
              .collapse.navbar-collapse.justify-content-end(id='navbarCollapse')
                ul.navbar-nav
                  block navitems
      main.d-flex.flex-column.vh-100(style='padding-top: 3rem;')
        .flex-grow-1
          block main
        .flex-shrink-1
          .container.mt-4
            .d-flex.justify-content-center.w-100.gap-3
                a.btn.btn-secondary.d-flex.align-items-center(href='https://github.com/danstuff', aria-label='@danstuff')
                  i.bi-github.me-2(style='font-size: 1.5rem;')
                  span danstuff
                a.btn.btn-secondary.d-flex.align-items-center(href='https://www.linkedin.com/in/danyost23/', aria-label='@danyost23') 
                  i.bi-linkedin.me-2(style='font-size: 1.5rem;')
                  span danyost23
            .d-flex.justify-content-center.w-100.mt-2
              p Created by Daniel Yost, 2024